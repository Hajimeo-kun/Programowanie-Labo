#include "pch.h"
#include <stdlib.h>
#include <stdio.h>
void choim()
{
	printf("     *    \n    * *   \n   * * *  \n  * * * *  \n * * * * *\n");


}
void choip()
{
	
	int i, j;
	for (i = 0; i < 5; i++) {
		
		for (j = 0; j < (5 - i); j++)
			putchar(' ');
		
		for (j = 0; j <= i; j++)
			printf(" *");
		putchar('\n');

	}
	
}



int main(int argc, char * argv[])
{
	choip();
	choim();
	int i, j,h;
	h = atoi(argv[1]);
	for (i = 0; i < h; i++) 
	{
		for (j = 0; j < (h - i); j++)
			putchar(' ');

		for (j = 0; j <= i; j++)
			printf(" *");
		putchar('\n');

	}
	return 0;

}
